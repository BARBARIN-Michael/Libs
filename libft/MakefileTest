		ft_putendl_c.c \
		ft_insert.c


OBJS = $(addprefix $(OBJDIR)/, $(notdir $(SRCS:.c=.o)))

RM = rm

all:$(NAME)

$(NAME): $(OBJS)
	$(AR) -rcus $(NAME) $?


$(OBJDIR)/%.o: %.c
	mkdir -p $(OBJDIR)
	@echo "CC\t$<"
	@$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) $(OBJS)

fclean: clean
	$(RM) $(NAME)

fcleanall: fclean
	$(RM) $(EXE)

re: fclean all
